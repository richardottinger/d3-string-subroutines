SUBROUTINE STRING.RIGHT(SOMETHING,HOW.MANY,RIGHT.CHARS)
   TOTAL.COUNT=LEN(SOMETHING)
   IF HOW.MANY>TOTAL.COUNT THEN CRT "STRING.RIGHT ERROR: You requested more characters than are available!"
   IF HOW.MANY = 1 THEN
      RIGHT.CHARS = SOMETHING[TOTAL.COUNT,HOW.MANY]
   END ELSE
      RIGHT.CHARS = SOMETHING[TOTAL.COUNT-HOW.MANY,HOW.MANY]
   END
RETURN